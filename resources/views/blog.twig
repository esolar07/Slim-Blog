{% extends '/layout/app.twig' %}

{% block title %} Blog {% endblock %}

{% block content %}
	
	<div class="page-header">
	  <h1>Blog Page</h1>
	</div>
	<pre>
	
	{% for post in posts %}
		<h1> Title: {{ post.name }} <h1>
		<h3 role="presentation"><a href="{{ path_for('post', {id: post.id} ) }} "> Read Post {{ post.id }} </a></h1>
	{% endfor %}
	
	</pre>
	
{% endblock %}