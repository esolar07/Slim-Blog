{% extends '/layout/app.twig' %}

{% block title %} Home {% endblock title %}

{% block content %}
	
	<div class="page-header">
	  <h1>Home Page</h1>
	</div>
	<pre>
	{% for user in users %}
		
		<h1>{{ user.upperCaseHeading() }} </h1>
		<h3 role="presentation"><a href="{{ path_for('post', {id: user.id} ) }} "> Read Post {{ user.id }} </a></h1>

	{% endfor %}
	</pre>
{% endblock content %}