<!doctype html>

<html lang="en">
<head>
  {% block head %}
	  <meta charset="utf-8">
	  <title> {% block title %}  {% endblock %} </title>
	  <meta name="description" content="Blog">
	  <meta name="author" content="Eddie Solar">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	  <!-- Latest compiled and minified CSS -->
	  <link rel="stylesheet" href="../public/css/style.css">
	  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	  <script src=""></script>
  {% endblock %}
</head>

<body>
  <header role="banner" class="navbar navbar-inverse bg-inverse l-header">
		<nav role="navigation">
			<ul class="nav nav-pills">
			  <li type="button" class="btn btn-secondary" class="active"><a href=" {{ path_for('home')}} ">Home</a></li>
			  <li type="button" class="btn btn-secondary"><a href="{{ path_for('blog')}} ">Blog</a></li>
			  <li type="button" class="btn btn-secondary"><a href="{{ path_for('contact')}} ">Contact</a></li>
				
			Hello {{session}} you

				{% if not session %}
						<li type="button" class="btn btn-secondary"><a href="{{ path_for('login')}} ">login {{session}} </a></li>
				{% else %}
						<li type="button" class="btn btn-secondary"><a href="{{ path_for('admin')}} ">Admin </a></li>
				{% endif %}

			</ul>
		</nav>
  </header>

  <main class="container">
	
	{% block content %}
    
	
	{% endblock %}
	
  </main>

  <footer role="contentinfo" class="l-footer">
	{% block footer %}
    
	{% endblock %}
  </footer>

</body>
</html>